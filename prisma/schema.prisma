// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  // For Turso, we use adapter in runtime, but need file: for Prisma validation
  // Set DATABASE_URL to a dummy file: URL (or actual file: URL for local dev)
  // For production with Turso, set TURSO_DATABASE_URL with libsql:// URL
  url      = env("DATABASE_URL")
}

model Employee {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  participants Participant[]
}

model LotterySession {
  id        Int      @id @default(autoincrement())
  name      String?  // Optional name for the session
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  participants Participant[]
}

model Participant {
  id           Int            @id @default(autoincrement())
  employeeId   Int
  sessionId    Int
  tickets      Int            @default(1)
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  
  employee     Employee       @relation(fields: [employeeId], references: [id], onDelete: Cascade)
  session      LotterySession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  
  @@unique([employeeId, sessionId])
}
